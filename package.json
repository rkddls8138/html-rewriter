{
  "name": "html-rewriter",
  "version": "0.1.0",
  "private": true,
  "description": "HTML Rewriter - SEO optimization library for web frameworks",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest",
    "link:global": "cd packages/core && pnpm link --global && cd ../sdk-nextjs && pnpm link --global",
    "unlink:global": "pnpm unlink --global @html-rewriter/core && pnpm unlink --global @html-rewriter/nextjs"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
