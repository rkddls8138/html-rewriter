{
  "name": "@rkddls8138/seo-core",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rkddls8138/html-rewriter.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "description": "Core library for HTML Rewriter - SEO optimization",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "html",
    "rewriter",
    "seo",
    "meta-tags",
    "optimization"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
